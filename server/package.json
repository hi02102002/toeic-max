{
    "name": "server",
    "version": "0.0.0",
    "description": "TypeScript + Express API Server",
    "author": "",
    "license": "ISC",
    "scripts": {
        "start": "npm run build && concurrently \"npm run server:prod\" \"npm run worker:prod\"",
        "dev": "concurrently \"npm run server:dev\" \"npm run worker:dev\"",
        "server:prod": "cross-env NODE_ENV=production node dist/server.js",
        "worker:prod": "cross-env NODE_ENV=production node dist/worker.js",
        "server:dev": "cross-env NODE_ENV=development nodemon",
        "worker:dev": "cross-env NODE_ENV=development nodemon --config nodemon.worker.json",
        "build": "swc src -d dist --source-maps --copy-files",
        "build:tsc": "tsc && tsc-alias",
        "test": "jest --forceExit --detectOpenHandles",
        "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
        "deploy:dev": "pm2 start ecosystem.config.js --only dev",
        "compose:dev": "docker-compose --env-file ./.env.development -f docker-compose.dev.yml up -d",
        "gen:migrate": "drizzle-kit generate:pg",
        "push:migrate": "drizzle-kit push:pg",
        "drop:migrate": "drizzle-kit drop",
        "check:migrate": "drizzle-kit check:pg",
        "db:studio": "drizzle-kit studio --port 9000",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "npx eslint --fix ./src"
    },
    "dependencies": {
        "@paralleldrive/cuid2": "^2.2.2",
        "@react-email/components": "^0.0.16",
        "@react-email/render": "^0.0.12",
        "@types/multer": "^1.4.11",
        "axios": "^1.6.8",
        "bcrypt": "^5.0.1",
        "bullmq": "^5.7.8",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
        "concurrently": "^8.2.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.0.1",
        "drizzle-orm": "^0.30.9",
        "envalid": "^7.3.1",
        "express": "^4.18.1",
        "firebase-admin": "^12.1.0",
        "helmet": "^5.1.1",
        "hpp": "^0.2.3",
        "http-status-codes": "^2.3.0",
        "https-proxy-agent": "^7.0.4",
        "ioredis": "^5.4.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mime-types": "^2.1.35",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.13",
        "passport-google-oauth": "^2.0.0",
        "pg": "^8.11.5",
        "react": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "slugify": "^1.6.6",
        "typedi": "^0.10.0",
        "winston": "^3.8.1",
        "winston-daily-rotate-file": "^4.7.1",
        "zod": "^3.23.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.220",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^4.17.13",
        "@types/hpp": "^0.2.2",
        "@types/jest": "^28.1.6",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.17.0",
        "@types/mime-types": "^2.1.4",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.45",
        "@types/nodemailer": "^6.4.14",
        "@types/passport-google-oauth": "^1.0.45",
        "@types/pg": "^8.11.5",
        "@types/react": "^18.3.1",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.21.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "globals": "^15.1.0",
        "husky": "^8.0.1",
        "jest": "^28.1.1",
        "lint-staged": "^13.0.3",
        "node-config": "^0.0.2",
        "node-gyp": "^9.1.0",
        "nodemon": "^2.0.19",
        "pm2": "^5.2.0",
        "prettier": "^3.2.5",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
